<div class="mb-3">
    <%= form_for @article do |f| %>
        <% if @article.errors.any?%>
            <ul>
                <% @article.errors.full_messages.each do |msg|%>
                    <li><%=msg%></l1>
                <% end%>
            </ul>
        <% end%>
        <div>
            <%= f.label :title, style:"display:block", class:"form-label"%>
            <%= f.text_field :title, class:"form-control", id:"exampleFormControlTextarea1"%>
        </div>

        <div>
            <%= f.label :description, style:"display:block",class:"form-label"%>
            <%= f.text_area :description ,class:"form-control", id:"exampleFormControlInput1"%>
        </div>

        <div>
            <%= f.submit%>
        </div>
    <% end %>
</div>

