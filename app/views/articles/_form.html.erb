<div class="mb-3">
    <%= form_for @article do |f|%>
        <% if @article.errors.any?%>
            <ul>
                <% @article.errors.full_messages.each do |msg|%>
                    <li><%=msg%></l1>
                <% end%>
            </ul>
        <% end%>
        <div>
            <%= f.label :title, style:"display:block", class:"form-label"%>
            <%= f.text_field :title, class:"form-control", id:"exampleFormControlTextarea1"%>
        </div>

        <div>
            <%= f.label :description, style:"display:block",class:"form-label"%>
            <%= f.text_area :description ,class:"form-control", id:"exampleFormControlInput1"%>
        </div>

        <div>
            <%= f.label :category, class: "col-2 col-form-label" %>
            <div class="col-10"> 
                <%= f.collection_select(:category_ids, Category.all, :id, :name,
                { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded form-control" }) %>
            </div>
        </div>

        <div>
            <%= f.submit class:"btn btn-dark btn-block mt-4 text-center"%>
        </div>
    <% end %>
</div>

