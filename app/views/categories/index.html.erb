<div class="container">
    <h1>Categories</h1>
    <% @categories.each do |category|%>
        <div class="card text-center mb-5">
            <div class="card-header">
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= category.name%></h5>
                <p class="card-text"><%= pluralize(category.articles.count,"Article")%></p>
                <%= link_to "Show", category_path(category),class:"btn btn-primary"%>
                <% if logged_in? && current_user.admin?%>
                    <%= link_to "Edit", edit_category_path(category),class:"btn btn-primary"%>
                    <%= link_to "Delete", category_path(category),data:{method: :delete},class:"btn btn-primary"%>
                <%end%>
            </div>
            <div class="card-footer text-muted">
                <small>Created <%= time_ago_in_words(category.created_at) %> ago</small>
            </div>
        </div>
    <%end%>
</div>