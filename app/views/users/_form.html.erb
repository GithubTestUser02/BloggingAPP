<section class="vh-100" style="background-color: #9A616D;">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5"><%= @user.new_record? ? "Create an account":"Update Details"%></h2>

              <%= form_for @user do |f| %>
                <% if @user.errors.any?%>
                    <ul>
                        <% @user.errors.full_messages.each do |msg|%>
                            <li><%=msg%></l1>
                        <% end%>
                    </ul>
                <% end%>
                
                <div class="form-outline mb-4">
                    <%= f.label :username, style:"display:block", class:"form-label",for:"form3Example1cg"%>
                    <%= f.text_field :username, class:"form-control form-control-lg",id:"form3Example1cg"%>
                </div>

                <div class="form-outline mb-4">
                    <%= f.label :email, style:"display:block", class:"form-label",for:"form3Example1cg"%>
                    <%= f.text_field :email, class:"form-control form-control-lg",id:"form3Example1cg"%>
                </div>

                <div class="form-outline mb-4">
                    <%= f.label :password, style:"display:block", class:"form-label",for:"form3Example1cg"%>
                    <%= f.text_field :password, class:"form-control form-control-lg",id:"form3Example1cg"%>
                </div>

                <div class="form-outline mb-4">
                    <%= f.label :password_confirmation, style:"display:block",class:"form-label",for:"form3Example1cg"%>
                    <%= f.text_field :password_confirmation ,class:"form-control",id:"form3Example1cg"%>
                </div>

                <div class="pt-1 mb-4 d-flex justify-content-center">
                    <%=f.submit @user.new_record? ? "Sign Up":"Update User", class:"btn btn-dark btn-lg btn-block"%>
                  </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <%= link_to "Login", login_path,class:"fw-bold text-body"%></p>

              <%end%>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>