<div class="mb-3">
    <%= form_for @user do |f| %>
        <% if @user.errors.any?%>
            <ul>
                <% @user.errors.full_messages.each do |msg|%>
                    <li><%=msg%></l1>
                <% end%>
            </ul>
        <% end%>
        <div>
            <%= f.label :username, style:"display:block", class:"form-label"%>
            <%= f.text_field :username, class:"form-control", id:"exampleFormControlTextarea1"%>
        </div>

        <div>
            <%= f.label :email, style:"display:block",class:"form-label"%>
            <%= f.text_field :email ,class:"form-control", id:"exampleFormControlInput1"%>
        </div>

        <div>
            <%= f.label :password, style:"display:block",class:"form-label"%>
            <%= f.text_field :password ,class:"form-control", id:"exampleFormControlInput1"%>
        </div>

        <div>
            <%= f.label :password_confirmation, style:"display:block",class:"form-label"%>
            <%= f.text_field :password_confirmation ,class:"form-control", id:"exampleFormControlInput1"%>
        </div>

        <div>
            <%= f.submit @user.new_record? ? "Sign Up":"Update User" %>
        </div>
    <% end %>
</div>

